<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/addressMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.map.MapActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:text="@string/find_location"
        android:background="@color/white_transparent_99"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/iranyekan_mobile_regular"
    />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_location" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_margin="@dimen/padding_30"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_background"
        android:text="@string/confirm_location"
        android:textColor="@color/white"/>

</android.support.constraint.ConstraintLayout>